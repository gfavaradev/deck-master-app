rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Yu-Gi-Oh catalog: readable by all authenticated users, writable only by admin
    match /yugioh_catalog/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.email == 'g.favara.dev@gmail.com';
    }

    // User data: only the owner can read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
